        android:layout_width="match_parent"
        android:layout_height="@dimen/pointsix"
        android:layout_below="@+id/detail_synonym"
        android:background="@android:color/black"
        android:layout_marginTop="@dimen/ten"
        android:id="@+id/view2"
        />
