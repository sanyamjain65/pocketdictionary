        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NA"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/sixteen"
        android:paddingRight="@dimen/sixteen"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/sixteen"
        android:id="@+id/detail_synonym"
        android:layout_below="@+id/detail_text1"
        app:font="@string/OpenSans_Reguler"
        android:layout_marginRight="@dimen/twentysix"
        android:layout_marginTop="@dimen/five"
        />
