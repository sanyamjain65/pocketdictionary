        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Synonym"
        android:textSize="20sp"
        android:textColor="#22a697"
        android:paddingLeft="@dimen/sixteen"
        android:paddingRight="@dimen/sixteen"
        android:paddingStart="@dimen/sixteen"
        android:paddingEnd="@dimen/sixteen"
        android:id="@+id/detail_text1"
        android:layout_below="@+id/view3"
        app:font="@string/OpenSans_Reguler"
        android:layout_marginRight="@dimen/twentysix"
        android:layout_marginTop="@dimen/ten"
        />
