<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_favourites"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22a697"
    tools:context="mypocketvakil.example.com.pocketdictionary.Favourites">
    <ListView
        android:layout_marginTop="@dimen/sixteen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/favorite_list"
        android:layout_marginLeft="@dimen/six"
        android:layout_marginRight="@dimen/six"

        android:dividerHeight="@dimen/five"
        android:divider="#22a697">

    </ListView>
    <mypocketvakil.example.com.pocketdictionary.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:text="@string/no_fav"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"
        app:font="@string/OpenSans_Reguler"/>

</RelativeLayout>
